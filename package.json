{
  "name": "Bolt.js",
  "version": "0.4.0",
  "description": "A Node.js-base runtime environment written in JavaScript",
  "main": "bolt.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Chieze-Franklin/Bolt.js"
  },
  "scripts": {
    "build": "gulp build",
    "start": "node bolt",
    "test": "npm run test-integration && npm run test-acceptance",
    "test-acceptance": "npm run test-acceptance-tobi && npm run test-acceptance-soda",
    "test-acceptance-soda": "nodeunit test/acceptance_test_with_soda.js",
    "test-acceptance-tobi": "nodeunit test/acceptance_test_with_tobi.js",
    "test-integration": "mocha -R spec test/spec_with_mocha_supertest.js",
    "test-style": "gulp test:style"
  },
  "engines": {
    "node": "6.9.4",
    "npm": "4.1.1"
  },
  "keywords": [
    "bolt",
    "host",
    "jaysos",
    "jsos",
    "node",
    "node.js",
    "nodeos",
    "operating",
    "os",
    "os.js",
    "system",
    "runtime",
    "environment"
  ],
  "dependencies": {
  },
  "devDependencies": {
  },
  "optionalDependencies": {},
  "author": "Chieze Franklin",
  "bugs": {
    "url": "https://github.com/Chieze-Franklin/Bolt.js/issues"
  },
